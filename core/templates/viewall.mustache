
		<!-- View All Patterns in a Pattern Sub-Type -->
		<div class="sg-main" role="main">

			<!-- Patterns -->
			<div id="sg-patterns">
				{{# partials }}
					<div id="{{ patternPartial }}" class="sg-pattern">
						<h2 class="content-header sg-component-header" ><a href="../../patterns/{{ patternLink }}" class="patternLink" data-patternpartial="{{ patternPartial }}">{{ patternName }}</a></h2>

						<div class="sg-pattern-body">


                            <div class="{{ patternPartial}} partial-wrap">
                                    {{{ patternPartialCode }}}
                            </div>

                            <script type="text/javascript">
                            var partialName = "{{ patternPartial }}";
                            console.log(partialName);
                            if(partialName.startsWith("atom") || partialName.startsWith("molecule") || (partialName.startsWith("organism") && partialName.indexOf("section") < 0))
                            {
                                $(".{{ patternPartial }}.partial-wrap").wrap("<div class='container'><div class='row'><div class='col-sm-12'></div></div></div>");
                            }
                            else {

                            }
                            </script>

							<div class="sg-code" style="display: none">
								{{# patternLineageExists }}
									<div class="sg-code-contains">
										This pattern contains:
										{{# patternLineages }}
											<a href="{{ lineagePath }}"><code>{{ lineagePattern }}</code></a>
										{{/ patternLineages }}
									</div>
								{{/ patternLineageExists }}
								<h3 class="sg-code-head">HTML</h3>
								<pre class="sg-code-html">
									<code>
										{{{ patternPartialCodeE }}}
									</code>
								</pre>
								{{# patternCSSExists }}
									<h3 class="sg-code-head">CSS</h3>
									<pre class="sg-code-css">
										<code>
											{{ patternCSS }}
										</code>
									</pre>
								{{/ patternCSSExists }}
							</div>
						</div>
					</div>
				{{/ partials }}
			</div> <!--end #sg-patterns-->

		</div><!--end .sg-main-->

		<!-- JS to hook everything together and do annotations -->
		<script>
			// handle injection of items from PHP
			var patternPartial = "{{ patternPartial }}";
			var lineage = "";
		</script>
